<Window x:Class="EduProManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduProManagement"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Center">
            <Label Content="Авторизируйтесь в приложении"></Label>
            <Label Content="Логин" HorizontalAlignment="Center" Margin="0,100,0,0"></Label>
            <TextBox x:Name="LoginBox" Width="150"></TextBox>
            <Label Content="Пароль" HorizontalAlignment="Center" Margin="0,10,0,0"></Label>
            <PasswordBox x:Name="PasswordBox" Width="150" Visibility="{Binding PassVisibility}"></PasswordBox>
            <Button x:Name="AuthButton" Width="100" Content="Войти" Margin="0,20,0,0" Click="AuthButton_Click"></Button>
            <Button x:Name="GuestButton" Width="100" Content="Войти как гость" Margin="0,20,0,0" Click="GuestButton_Click"></Button>


        </StackPanel>
    </Grid>
</Window>
