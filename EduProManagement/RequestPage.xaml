<Page x:Class="EduProManagement.RequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EduProManagement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RequestPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" x:Name="SearchPanel" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,10,10,10">
            <TextBox x:Name="SearchBox" Width="150" ToolTip="Поиск по ФИО" TextChanged="SearchBox_TextChanged"></TextBox>
            <Label Content="Сортировать по статусу"></Label>
            <ComboBox x:Name="StatusSortBox" Width="100" SelectionChanged="StatusSortBox_SelectionChanged"></ComboBox>
            <Label Content="Сортировать по дате"></Label>
            <ComboBox x:Name="DateSortBox" Width="100" SelectionChanged="DateSortBox_SelectionChanged"></ComboBox>
            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" ></Button>
            <Button x:Name="AddButton" Content="Добавить" Click="AddButton_Click" ></Button>
            <Button x:Name="DeleteButton" Content="Удалить" Click="DeleteButton_Click"></Button>

        </StackPanel>
        <DataGrid x:Name="RequestsList" AutoGenerateColumns="False" SelectionMode="Single" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"></DataGridTextColumn>
                <DataGridComboBoxColumn Header="Название курса" x:Name="CourseBox"></DataGridComboBoxColumn>
                <DataGridComboBoxColumn Header="ФИО" x:Name="UserBox"></DataGridComboBoxColumn>
                <DataGridTextColumn Header="Дата отправки" x:Name="DateField" Binding="{Binding Date}"></DataGridTextColumn>
                <DataGridComboBoxColumn Header="Статус" x:Name="StatusBox"></DataGridComboBoxColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
