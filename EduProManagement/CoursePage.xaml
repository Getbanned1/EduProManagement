<Page x:Class="EduProManagement.CoursePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EduProManagement"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="800"
      Title="CoursePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" x:Name="SearchPanel" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,10,10,10">
            <TextBox x:Name="SearchBox" Width="150" ToolTip="Поиск по названию заявки" TextChanged="SearchBox_TextChanged"></TextBox>
            <Label Content="Сортировать по дате"></Label>
            <ComboBox x:Name="DateSortBox" Width="124" SelectionChanged="DateSortBox_SelectionChanged"></ComboBox>
        </StackPanel>
        <ListBox x:Name="CourseList" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Width="800">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="50"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding FilePath}"  Grid.Column="0" Stretch="Uniform"></Image>
                        <StackPanel Grid.Column="1" Margin="20">
                            <TextBlock Text="{Binding Name}"></TextBlock>
                            <TextBlock Text="{Binding CourseType.Name}"></TextBlock>
                            <TextBlock Text="{Binding Duration, StringFormat='Длительность: {0}'}"></TextBlock>
                            <TextBlock FontWeight="{Binding StartsSoon}" Text="{Binding StartDate, StringFormat='Дата начала: {0}'}"></TextBlock>
                        </StackPanel>
                        <TextBlock Grid.Column="2" Text="{Binding Price, StringFormat='Стоимость: {0}'}"></TextBlock>
                        <TextBlock Grid.Column="2" Background="{Binding LowSeats}" Grid.Row="1" Text="{Binding AvaliableSpace, StringFormat='Кол-во свободных мест: {0}'}"></TextBlock>

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
